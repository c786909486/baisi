<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ckz.colltest.MainActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/baisiColor"
            app:expandedTitleMarginStart="20dp"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6" >
                <ImageView
                    android:id="@+id/user_bg"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg" />
                <TextView
                    android:id="@+id/user_total_like"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/user_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="123"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:background="@drawable/gz_count_bg"
                    android:drawableLeft="@mipmap/praise_not_clicked"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:id="@+id/user_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textSize="@dimen/user_introduction"
                    android:textColor="@color/white"/>
                <RelativeLayout
                    android:id="@+id/middle_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_bg"
                    android:background="#ffffff"
                    android:paddingBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:divider="@drawable/line"
                            android:showDividers="middle">
                            <TextView
                                android:id="@+id/fans_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2282粉丝"
                                android:gravity="center"
                                android:layout_margin="10dp" />
                            <TextView
                                android:id="@+id/guanzhu_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="34关注"
                                android:gravity="center"
                                android:layout_margin="10dp"/>
                            <TextView
                                android:id="@+id/user_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="等级LV:20"
                                android:gravity="center"
                                android:layout_margin="10dp"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gz_bg"
                            android:padding="3dp">
                            <TextView
                                android:id="@+id/add_focus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="关注"
                                android:drawablePadding="10dp"
                                android:textColor="@color/baisiColor"
                                android:drawableLeft="@mipmap/personal_focus_add"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <com.ckz.baisi.view.CircleImageView
                    android:id="@+id/user_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/bg"
                    android:layout_alignBottom="@id/middle_group"
                    app:border_width="4dp"
                    app:border_color="#fff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_below="@id/middle_group">

                <android.support.design.widget.TabLayout
                    android:id="@+id/user_tab"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/baisiColor"
                    app:tabSelectedTextColor="@color/baisiColor"
                    app:tabTextColor="@color/mostTextColor"
                    app:tabTextAppearance="@style/TabLayoutTextSize">
                </android.support.design.widget.TabLayout>

                <TextView
                    android:id="@+id/show_counts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mostBackground"
                    android:textSize="16sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/top_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/back"
                        android:textSize="@dimen/backSize"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="150dp"
                        android:text="NAME"
                        android:textSize="19sp"
                        android:textColor="#fff"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_alignBaseline="@+id/top_back"
                        android:layout_alignBottom="@+id/top_back"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:id="@+id/user_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/user_name"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/personal_sex_men"
                        android:padding="5dp"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.view.ViewPager
            android:id="@+id/user_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
    <ProgressBar
        android:id="@+id/user_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
