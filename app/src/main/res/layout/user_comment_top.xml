<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.ckz.baisi.view.CircleImageView
                android:id="@+id/image_user_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/list_view_refreshing_1"
                app:border_color="#fff"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/nameWithTime"
                    android:text="userName"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="@color/userName"
                    />
                <TextView
                    android:id="@+id/pass_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/timeSize"
                    android:text="2017-02-13"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/comment_right_cai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/cai_click"
            android:textColor="@drawable/txt_seclect"
            android:drawablePadding="5dp"

            />
        <TextView
            android:id="@+id/comment_right_ding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ding_click"
            android:textColor="@drawable/txt_seclect"
            android:drawablePadding="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/comment_right_cai"
            />
    </RelativeLayout>
</LinearLayout>