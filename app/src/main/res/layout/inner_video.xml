<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF4F6"
    android:paddingBottom="15dp">
    <include layout="@layout/comment_inner_user"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="35dp">
        <TextView
            android:id="@+id/inner_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="123123"
            android:textAppearance="?android:attr/textAppearance"/>
       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/show_video_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/refresh_head_arrow"/>
        <ImageView
            android:id="@+id/video_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/play_video_normal"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>