<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ckz.baisi.activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/main_bottom_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/main_tab_background"
            android:padding="3dp"
            >

                <TextView
                    android:id="@+id/main_btn_jinghua"
                    style="@style/main_tab_style"
                    android:text="精华"
                    android:drawableTop="@drawable/jinghua"
                    />
                <TextView
                    android:id="@+id/main_btn_xintie"
                    style="@style/main_tab_style"
                    android:text="最新"
                    android:drawableTop="@drawable/zuixin"
                    />
                <TextView
                    android:id="@+id/main_btn_fabu"
                    style="@style/main_tab_style"
                    android:textSize="1sp"
                    android:drawableTop="@drawable/fabu"
                    />
                <TextView
                    android:id="@+id/main_btn_guanzhu"
                    style="@style/main_tab_style"
                    android:text="关注"
                    android:drawableTop="@drawable/guanzhu"
                    />
                <TextView
                    android:id="@+id/main_btn_wo"
                    style="@style/main_tab_style"
                    android:text="我"
                    android:drawableTop="@drawable/wode"
                    />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom_layout"
        android:id="@+id/main_fragment_content"></FrameLayout>
</RelativeLayout>
