<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_comment_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ckz.baisi.activity.ShowCommentImage"
    android:background="#000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/show_comment_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/bg_activities_item_end_transparent"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/show_comment_ad"
                android:layout_below="@id/show_comment_image"/>
      </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/show_big_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/show_big_back"
        android:padding="10dp"/>
</RelativeLayout>
