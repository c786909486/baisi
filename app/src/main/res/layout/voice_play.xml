<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/voice_bg"
            android:id="@+id/voice_play_btn"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/voice_ani"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/voide_play_ani"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_trumpet_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/voide_play_icon"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleSmall"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:id="@+id/voice_loading"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/voice_play_btn"
            android:layout_alignBottom="@id/voice_play_btn"
            android:text="6''"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:id="@+id/voice_duration"/>
    </RelativeLayout>

</LinearLayout>